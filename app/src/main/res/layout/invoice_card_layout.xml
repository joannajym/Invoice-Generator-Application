<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/invoiceIDCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:singleLine="true"
            android:text="InvoiceID"
            android:textColor="#3F3734"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/issuerNameCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:singleLine="true"
            android:text="Issuer Name"
            android:textColor="#3F3734"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/buyerNameCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:singleLine="true"
            android:text="Buyer Name"
            android:textColor="#3F3734"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/invoiceTotalCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:text="Total"
            android:textColor="#3F3734"
            android:gravity="end"
            android:paddingRight="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
